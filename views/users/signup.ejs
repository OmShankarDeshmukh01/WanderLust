<%layout("/layouts/boilerplate.ejs")%>
<h1 class="col-6 offset-3">Signup on Wanderlust</h1>

<div class="row mt-3" >
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for-="username" class="form-lable">Username</lable>
            <input name ="username" id="username" placeholder="Username" type="text" class="form-control"required/><!--"listing[title]" this is the short format to extract the values otherwise we have to write let {title , description ,etc..}   b ut after this line we only write "let listing =req.body.listing";-->
            <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <lable for-="email" class="form-lable">Email</lable>
            <input name ="email" id="email" placeholder="email" type="email" class="form-control"required/><!--"listing[title]" this is the short format to extract the values otherwise we have to write let {title , description ,etc..}   b ut after this line we only write "let listing =req.body.listing";-->
            </div>

            <div class="mb-3">
                <lable for-="password" class="form-lable">Password</lable>
            <input name ="password" id="password" placeholder="Password" type="password" class="form-control"required/><!--"listing[title]" this is the short format to extract the values otherwise we have to write let {title , description ,etc..}   b ut after this line we only write "let listing =req.body.listing";-->
            </div>

            <button class="btn btn-success col-6 offset-3">Signup</button>
        </form>
        </div>
        </div>