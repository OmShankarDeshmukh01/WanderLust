<%layout("/layouts/boilerplate.ejs")%>

    <div class="row mt-3" >
        <div class="col-8 offset-2">

        <br/><br/>
     <h3>Create New listing :</h3><!--basic heading-->
     <!--we are creating all the name a field of object "listings" is an object and title is a field in it-->
    
        
     <form method="POST" action="/listings" noValidate class="needs-validation">
        <div class="mb-3">
            <lable for-="title" class="form-lable">Title</lable>
        <input name ="listing[title]" placeholder="add a catchy title" type="text" class="form-control"required/><!--"listing[title]" this is the short format to extract the values otherwise we have to write let {title , description ,etc..}   b ut after this line we only write "let listing =req.body.listing";-->
        <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
            <lable for-="description" class="form-lable">Description</lable>
            <textarea name ="listing[description]" placeholder="enter description" type="text" class="form-control"required></textarea>
            <div class="invalid-feedback">
                Please enter a valid description.
              </div>
        </div>
        <div class="mb-3">
            <lable for-="image" class="form-lable">Image Link</lable>
            <input name ="listing[image]" placeholder="enter image URL/link" type="text" class="form-control"/>
        </div>
        <div class="row"> <!-- to bring price and country in one row to write this -->
            <div class="mb-3 col-md-4">
                <lable for-="price" class="form-lable">Price</lable>
                <input name ="listing[price]" placeholder="1200"  class="form-control" required/>
                <div class="invalid-feedback">
                    Price should be valid.
                  </div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for-="country" class="form-lable">Country</lable>
                <input name ="listing[country]" placeholder="India" type="text" class="form-control" required/>
                <div class="invalid-feedback">
                    Country name should be valid.
                  </div>
            </div>
        </div>
        
        <div class="mb-3">
            <lable for-="location" class="form-lable">Location</lable>
            <input name ="listing[location]" placeholder="Jamshedpur , Jharkhand" type="text" class="form-control" required/>
            <div class="invalid-feedback">
                Location should be valid.
              </div>
        </div>
        <br/><br/>
        <button class="btn btn-danger ">Add</button>
          <br/><br/><br/>        
    </div>
     </form>
                
      </div>
    </div>
